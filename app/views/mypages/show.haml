=render "shared/red-camera"
.top-header
  = render "shared/header"
%nav.second-header
  %ul.second-header__box
    - breadcrumb :mypage
    = breadcrumbs pretext: "",separator: " &rsaquo; ", class: "bread"
  .wrapper#backside
    .container.clearfix
      = render "shared/side-list"
      .right-content
        %section.mypage-user-icon
          = link_to mypage_profile_path, class:"mypage-icon" do
            .mypage-user-icon__image
              = image_tag "avator.png" , width:70, height:70, class:"image"
            %h2.mypage-user-icon__name
              = current_user.nickname
          .mypage-number
            .mypage-number__gedgement
              評価
              %span.mypage-number__gedgement__num
                0
            .mypage-number__number
              出品数
              %span.mypage-number__number__num
                0
        .todo-box
          = render "shared/mypage-todo"
        .mypage-tab-box
          = render "shared/mypage-tab-container"
.toppage-footer__image
  = image_tag 'mercari__footer.jpg', class: 'footer__image__pic', height: '260', width: '100%'
.last-footer
  = render "shared/footer"