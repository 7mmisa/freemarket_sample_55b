.address-body.login-hidden
  .address-body__container
    .address-body__container__header
      %h1.address-body__container__header__h1 
        = image_tag "main-logo.png" , width: 240, height:70
      .progress-bar-contents
        .progress-bar
          .progress-bar__text
            会員登録
          .progress-bar__dot.dot-bars1.red-dot
            ●
            .progress-bar__dot__bars.dot-bar1#red-bar
        .progress-bar
          .progress-bar__text
            電話番号認証
          .progress-bar__dot.dot-bars2.red-dot
            ●
            .progress-bar__dot__bars.dot-bars2#red-bar
        .progress-bar
          .progress-bar__text.input-address
            お届け先住所入力
          .progress-bar__dot.dot-bar3.red-dot
            ●
            .progress-bar__dot__bars.dot-bars3
        .progress-bar
          .progress-bar__text
            支払い方法
          .progress-bar__dot.dot-bar4
            ●
            .progress-bar__dot__bars.dot-bars4
        .progress-bar
          .progress-bar__text
            完了
          .progress-bar__dot.dot-bars5
            ●
    .adress-main
      .adress-main__box
        %h2.adress-main__box__text
          住所入力
        .adress-inner
          .adress-inner__contents
            .form-group
              %label.form-group__name
                お名前
              %span.form-group__hissu
                必須
              %input.form-group__input-box{placeholder: "例) 山田"}
              %input.form-group__input-box{placeholder: "例) 彩"}
            .form-group-2
              %label.form-group__name
                お名前カナ
              %span.form-group__hissu
                必須
              %input.form-group__input-box{placeholder: "例) ヤマダ"}
              %input.form-group__input-box{placeholder: "例) アヤ"}
            .form-group-2
              %label.form-group__name
                郵便番号
              %span.form-group__hissu
                必須
              %input.form-group__input-box{placeholder: "例) 123-4567"}
            .form-group-2
              %label.form-group__name
                都道府県
              %span.form-group__hissu
                必須
              = fa_icon"angle-down " , class:"angle-icon fa-lg"
              %select.form-group-2__select
            .form-group-2
              %label.form-group__name
                市区町村
              %span.form-group__hissu
                必須
              %input.form-group__input-box{placeholder: "例) 東海市名和町"}
            .form-group-2
              %label.form-group__name
                番地
              %span.form-group__hissu
                必須
              %input.form-group__input-box{placeholder: "例) 青山1-1-1"}
            .form-group-2
              %label.form-group__name
                建物名
              %span.form-group__arbitrarily
                任意
              %input.form-group__input-box{placeholder: "例) 柳ビル103"}
            .form-group-2
              %label.form-group__name
                電話
              %span.form-group__arbitrarily
                任意
              %input.form-group__input-box{placeholder: "例) 09056567878"}
            .form-group-btn-box
              %submit.btn-next-box
                次へ進む
    = render "shared/footer-log"