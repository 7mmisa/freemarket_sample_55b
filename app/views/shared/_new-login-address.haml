.address-body.login-hidden
  .address-body__container
    .address-body__container__header
      %h1.address-body__container__header__h1 
        = image_tag "main-logo.png" , width: 240, height:70
      .progress-bar-contents
        .progress-bar
          .progress-bar__text
            会員登録
          .progress-bar__dot.dot-bars1.red-dot
            ●
            .progress-bar__dot__bars.dot-bar1#red-bar
        .progress-bar
          .progress-bar__text
            電話番号認証
          .progress-bar__dot.dot-bars2.red-dot
            ●
            .progress-bar__dot__bars.dot-bars2#red-bar
        .progress-bar
          .progress-bar__text.input-address
            お届け先住所入力
          .progress-bar__dot.dot-bar3.red-dot
            ●
            .progress-bar__dot__bars.dot-bars3
        .progress-bar
          .progress-bar__text
            支払い方法
          .progress-bar__dot.dot-bar4
            ●
            .progress-bar__dot__bars.dot-bars4
        .progress-bar
          .progress-bar__text
            完了
          .progress-bar__dot.dot-bars5
            ●
    .adress-main
      = form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f|
        = render "devise/shared/error_messages", resource: resource
        .adress-main__box
          %h2.adress-main__box__text
            住所入力
          .adress-inner
            .adress-inner__contents
              .form-group
                %label.form-group__name
                  お名前
                %span.form-group__hissu
                  必須
                %span
                  = f.text_field :family_name, autocomplete: "family_name_kanji", placeholder: "例) 山田", class: "form-group__input-box"
                  = f.text_field :first_name, autocomplete: "first_name_kanji", placeholder: "例）彩", class: "form-group__input-box"
              .form-group-2
                %label.form-group__name
                  お名前カナ
                %span.form-group__hissu
                  必須
                %span
                  = f.text_field :family_name_kana, autocomplete: "family_name_kana", placeholder: "例）ヤマダ", class: "form-group__input-box"
                  = f.text_field :first_name_kana, autocomplete: "family_name_kana", placeholder: "例）アヤ", class: "form-group__input-box"
              .form-group-2
                %label.form-group__name
                  郵便番号
                %span.form-group__hissu
                  必須
                %span
                  = f.text_field :post_number, placeholder: "例）123-4567", class: "form-group__input-box"
              .form-group-2
                %label.form-group__name
                  都道府県
                %span.form-group__hissu
                  必須
                = fa_icon"angle-down " , class:"angle-icon fa-lg"
                %span
                  = f.collection_select :prefecture, Prefecture.all, :id, :name,{prompt: "--"}, {class:"form-group-2__select"}
              .form-group-2
                %label.form-group__name
                  市区町村
                %span.form-group__hissu
                  必須
                %span
                  = f.text_field :city, placeholder: "例) 東海市名和町", class: "form-group__input-box"
              .form-group-2
                %label.form-group__name
                  番地
                %span.form-group__hissu
                  必須
                %span
                  = f.text_field :address, placeholder: "例) 青山1-1-1", class: "form-group__input-box"
              .form-group-2
                %label.form-group__name
                  建物名
                %span.form-group__arbitrarily
                  任意
                %span
                  = f.text_field :building, autocomplete: "email", placeholder: "例）柳ビル103", class: "form-group__input-box"
              .form-group-2
                %label.form-group__name
                  電話
                %span.form-group__arbitrarily
                  任意
                %span
                  = f.text_field :phone_number, autocomplete: "current-password", placeholder: "例）09012345678", class: "form-group__input-box"
              .form-group-btn-box
                %span
                  = f.submit "次へ進む", class: 'btn-next-box'
      = render "shared/footer-log"