=render "shared/red-camera"
.top-header
  = render "shared/header"
%nav.second-header
  %ul.second-header__box
    - breadcrumb :listing
    = breadcrumbs pretext: "",separator: " &rsaquo; ", class: "bread"

.wrapper#background
  .container.clearfix
    = render "shared/side-list"
    
    .right-content
      
      .right-content__main-box
        %section.mypage-tab-container
          %h2.mypage-tab-container__head
            出品した商品
          %ul.mypage-tabs
            %li.transaction
              %h3.transaction__item
                出品中
            %li.past_transaction
              %h3.past_transaction__item
                取引中
            %li.past_transaction
              %h3.past_transaction__item
                売却済み
          .item-content-box
            = render partial:"shared/selling_item", collection: @items, as: :item
                        
.toppage-footer__image
  = image_tag 'mercari__footer.jpg', class: 'footer__image__pic', height: '260', width: '100%'
.last-footer
  = render "shared/footer"