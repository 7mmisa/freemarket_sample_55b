.top-header
  = render "shared/header"
%nav.second-header
  %ul.second-header__box
    - breadcrumb :card
    = breadcrumbs pretext: "",separator: " &rsaquo; ", class: "bread"
.wrapper#background
  .container.clearfix
    = render "shared/side-list"
    .right-content
      .right-content__main-box
        - if current_user.cards.present?
          = render "shared/credit_confirmation"
        - else
          = render "shared/credit"
.toppage-footer__image
  = image_tag 'mercari__footer.jpg', class: 'footer__image__pic', height: '260', width: '100%'
.last-footer
  = render "shared/footer"